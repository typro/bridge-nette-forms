<form action="" method="post" class="form">
	<div class="form__controls">
		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-default">Select</label>
			</div>

			<div class="form__control">
				<select name="default" id="frm-default"></select>
			</div>
		</div>

		<div class="form__control-pair form__control-pair--required">
			<div class="form__label">
				<label for="frm-required" class="form__control--required">Select required</label>
			</div>

			<div class="form__control">
				<select name="required" id="frm-required" required></select>
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-noLabel"></label>
			</div>

			<div class="form__control">
				<select name="noLabel" id="frm-noLabel"></select>
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-withItems">Select with items</label>
			</div>

			<div class="form__control">
				<select name="withItems" id="frm-withItems">
					<option value="a">Item A</option>
					<option value="b">Item B</option>
				</select>
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-withSize">Select with items</label>
			</div>

			<div class="form__control">
				<select name="withSize" size="2" id="frm-withSize"></select>
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label"></div>

			<div class="form__control">
				<input type="submit" name="_submit" value="Submit" class="button">
			</div>
		</div>
	</div>
</form>
