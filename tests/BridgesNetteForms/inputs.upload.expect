<form action="" method="post" class="form" enctype="multipart/form-data">

<div class="form__controls">
<div class="form__control-pair">
	<div class="form__label"><label for="frm-default">Upload</label></div>

	<div class="form__control"><input type="file" name="default" id="frm-default" class="form__control--text"></div>
</div>

<div class="form__control-pair form__control-pair--required">
	<div class="form__label"><label for="frm-required" class="form__control--required">Upload required</label></div>

	<div class="form__control"><input type="file" name="required" id="frm-required" required data-nette-rules='[{"op":":filled","msg":"This field is required."}]' class="form__control--text"></div>
</div>

<div class="form__control-pair">
	<div class="form__label"><label for="frm-noLabel"></label></div>

	<div class="form__control"><input type="file" name="noLabel" id="frm-noLabel" class="form__control--text"></div>
</div>

<div class="form__control-pair">
	<div class="form__label"><label for="frm-multiple">Upload multiple</label></div>

	<div class="form__control"><input type="file" name="multiple[]" multiple id="frm-multiple" class="form__control--text"></div>
</div>

<div class="form__control-pair">
	<div class="form__label"></div>

	<div class="form__control"><input type="submit" name="_submit" value="Submit" class="button"></div>
</div>
</div>

<!--[if IE]><input type=IEbug disabled style="display:none"><![endif]-->
</form>
