<form action="" method="post" class="form">
	<div class="form__controls">
		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-default">Integer</label>
			</div>

			<div class="form__control">
				<input type="number" name="default" id="frm-default" class="form__control--text">
			</div>
		</div>

		<div class="form__control-pair form__control-pair--required">
			<div class="form__label">
				<label for="frm-required" class="form__control--required">Integer required</label>
			</div>

			<div class="form__control">
				<input type="number" name="required" id="frm-required" required class="form__control--text">
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label">
				<label for="frm-noLabel"></label>
			</div>

			<div class="form__control">
				<input type="number" name="noLabel" id="frm-noLabel" class="form__control--text">
			</div>
		</div>

		<div class="form__control-pair">
			<div class="form__label"></div>

			<div class="form__control">
				<input type="submit" name="_submit" value="Submit" class="button">
			</div>
		</div>
	</div>
</form>
